{
  "manifest_version": 2,

  "name": "Smile More",
  "description": "This extension automatically redirects Amazon.com webpages to their happier versions, if available.",
  "version": "1.0",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Smile More! :D"
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ]
}
